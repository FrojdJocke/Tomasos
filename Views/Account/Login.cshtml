@model TomasosASP.Models.User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>

<label class="text-danger">Inloggning misslyckades</label>

<form asp-controller="Account" asp-action="Login" method="post">
    <label>Användarnamn</label><br />
    <input class="form-control" asp-for="UserName" class="modalInput" type="text" /><br/>
    <span asp-validation-for="UserName"></span>
    <br /><br />
    <label>Lösenord</label><br />
    <input class="form-control" asp-for="PasswordHash" class="modalInput" type="password" /><br/>
    <span asp-validation-for="PasswordHash"></span><br /><br />
    <input id="login" type="submit" value="Logga in" />
</form>


</body>