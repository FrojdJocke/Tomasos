@model TomasosASP.ViewModels.AccountModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Registrera ny användare</h2>
<br/>
<form asp-controller="Account" asp-action="Register" method="post">
    @Html.Partial("_UserRegistration", Model)

    <label asp-for="Customer.Losenord">Lösenord</label><br />
    <input class="form-control" asp-for="Customer.Losenord" type="password" /> <br />
    <span asp-validation-for="Customer.Losenord"></span>
    <input asp-for="Customer.Poang" type="hidden" value="@((int)0)" />
    <br /><br />
    <input id="register" type="submit" value="Registrera" />
    <br /><br />
    @Html.ValidationMessageFor(x => x.Customer.AnvandarNamn)


</form>