@model TomasosASP.ViewModels.LoginModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Tomasos Pizzeria</a>
        </div>
        <ul class="nav navbar-nav">
            <li class="active"><a href="#">Start</a></li>
            
            
            <li><a href="#">Kontakt</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="#"><span class="glyphicon glyphicon-user"></span> Skapa Konto</a></li>
            <li><a href="#" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-log-in"></span> Logga in</a></li>
        </ul>
    </div>
</nav>

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h2 class="modal-title modalText">Logga in</h2>
            </div>
            <div class="modal-body">
                <!-- Här kan man skriva Modalens innehåll-->
                <form asp-controller="Account" asp-action="ControlLogin" method="post">
                    <label class="modalText">Användarnamn</label><br />
                    <input asp-for="Username" class="modalInput" type="text" />
                    <br /><br />
                    <label class="modalText">Lösenord</label><br />
                    <input asp-for="Password" class="modalInput" type="password" />
                    <input id="login" type="submit" value="Save" />
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
      
    </div>
</div>



<div class="row container-fluid">
    <div class="col-sm-8 col-sm-offset-2 home-col-logoff content" align="center">
        
        <img class="scaledown" src="~/Images/886abc75869b5ad7a0386f72f2422305_rwsitelogo.png"/>
        <h1>Välkommen till Tomasos Pizzeria!</h1>

    </div>
    
    
</div>


