@model List<TomasosASP.Models.Matratt>
@{
    ViewData["Title"] = "ViewProducts";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row container-fluid">
    <div class="col-sm-10 col-sm-offset-1">

        <table class="table table-hover table-striped">

            <thead class="thead-dark">
            <tr>
                <th scope="col">Maträtt</th>
                <th scope="col">Pris</th>
                <th scope="col">Alternativ</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.MatrattNamn</th>
                    <td>@(item.Pris):-</td>
                    <td>
                        <a asp-controller="AdminProduct" asp-action="EditProduct" asp-route-id="@item.MatrattId"
                           class="btn btn-sm btn-warning">
                            <i class="icon-edit"></i> Updatera
                        </a>
                        &nbsp;&nbsp;
                        @if (!item.BestallningMatratt.Any())
                        {
                            <a asp-controller="AdminProduct" asp-action="DeleteProduct" asp-route-id="@item.MatrattId"
                               class="btn btn-sm btn-danger">
                                <i class="icon-edit"></i> Radera
                            </a>
                        }

                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>